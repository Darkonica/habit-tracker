{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "target": "es2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false, // temporary
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["./src/*"],
      "@assets/*": ["./assets/*"],
      "@styles/*": ["./src/styles/*"],
    }
  },
  "include": ["src/**/*"]
}